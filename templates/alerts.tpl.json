{
	"created_utc": {{ written_at_utc.isoformat()|escape_json }},
	"next_update_utc": {{ next_update_utc.isoformat()|escape_json }},
	"alerts_count": {{ alerts|length }},
	"alerts": [
	{% for alert in alerts %}
		{
			"detail_url": "http://wxalerts.org/json/detail/{{ alert.uuid }}.json",
			"sender": {{ alert.sender|escape_json }},
			"event": {{ alert.event|escape_json }},
			"severity": {{ alert.severity|escape_json }},
			"expires": {{ alert.expires_utc.isoformat()|escape_json }},
			"region": {{ alert.region|escape_json }},
        	"states": [{% for state in alert.states_list %}
        		{{ state.name|escape_json }}{% if not loop.last %},{% endif %}{% endfor %}
        	]
		}{% if not loop.last %},{% endif %}
	{% endfor %}
	]
}