{
	"created_utc": {{ written_at_utc.isoformat()|escape_json }},
	"title": {{ alert.title|escape_json }},
	"link": {{ alert.link|escape_json }},
	"uuid": {{ alert.uuid|escape_json }},
	"author": {{ alert.author|escape_json }},
	"sender": {{ alert.sender|escape_json }},
	"status": {{ alert.status|escape_json }},
	"message_type": {{ alert.msg_type|escape_json }},
	"event": {{ alert.event|escape_json }},
	"category": {{ alert.category|escape_json }},
	"urgency": {{ alert.urgency|escape_json }},
	"severity": {{ alert.severity|escape_json }},
	"certainty": {{ alert.certainty|escape_json }},
	"timezone": {{ alert.timezone_abbr|escape_json }},
	"updated": {{ alert.updated_utc.isoformat()|escape_json }},
	"published": {{ alert.published_utc.isoformat()|escape_json }},
	"effective": {{ alert.effective_utc.isoformat()|escape_json }},
	"expires": {{ alert.expires_utc.isoformat()|escape_json }},
	"region": {{ alert.region|escape_json }},
	"states": [{% for state in alert.states_list %}
		{{ state.name|escape_json }}{% if not loop.last %},{% endif %}{% endfor %}
	],
	"counties": [{% for county in alert.counties_list %} 
		{
			"name": "{{ county.name }}",
			"state": {{ county.state|escape_json }},
			"fips": {{ county.fips|escape_json }},
			"lng": {{ county.lng }},
			"lat": {{ county.lat }},
			"point": [{{ county.lng }}, {{ county.lat }}],
			"box": {{ county.bbox }}
		}{% if not loop.last %},{% endif %}{% endfor %}
	],
	"zones": [{% for zone in alert.ugc_zones_list %}
	    {
            "name": {{ zone.name|escape_json }},
            "cwa": {{ zone.cwa|escape_json }},
            "code": {{ zone.state_zone|escape_json }},
            "lat": {{ zone.lat }},
            "lng": {{ zone.lng }},
            "box": {{ zone.bbox }}
	    }{% if not loop.last %},{% endif %}{% endfor %}
	],
	"area_description": {{ alert.area_desc|escape_json }},
	"polygon": {{ alert.formatted_polygon }},
	"summary": {{ alert.summary|escape_json }},
	"instruction": {{ alert.instruction|escape_json }},
	"description": {{ alert.description|escape_json }},
	"note": {{ alert.note|escape_json }}
}